<?xml version="1.0" encoding="utf-8" ?>

<odoo>
	<record id="view_espacios_form" model="ir.ui.view">
		<field name="name">Vista formulario de espacio</field>
		<field name="model">espacios</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
				<div class="oe_title">
					<div class="o_row">
						<h1 style="display:flex;">
							<field name="local" class="oe_inline" placeholder="Nombre de espacio o local" required="1" default_focus="1">-</field>
						</h1>
				</div>
				</div>				
				<group string="Datos principales" style="margin-top:-10px">
					<group>
					<field name="name"/>
					<field name="padre"/>
					<field name="bloque"/>
					<field name="planta"/>
					</group>
					<group>
					<field name="parent_id" context="{'parent_id': active_id, 'parent_model': 'conf2'}"/>
					<field name="superficie"></field>
					<field name="ull_id"></field>
				</group>
					<field name="child_ids"/>
				</group>
			</sheet>
			</form>
		</field>
	</record>
	<record id="view_espacios_tree" model="ir.ui.view">
		<field name="name">Vista lista de espacios</field>
		<field name="model">espacios</field>
		<field name="arch" type="xml">
			<tree>	
				<field name="parent_id"/>
				<field name="padre"/>
				<field name="bloque"/>
				<field name="planta"/>
				<field name="name"/>
				<field name="local"/>
				<field name="superficie"/>
				<field name="ull_id"/>
			</tree>
		</field>
	</record>
</odoo>
