<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="kanban_planes" model="ir.ui.view">
		<field name="name">planes.kanban</field>
		<field name="model">conf2</field>
		<field name="arch" type="xml">
		<kanban default_group_by="state" group_create="true">
		<field name="state" />
		<field name="name" />
		<templates>
			<t t-name="kanban-box">
				<div class="oe_kanban_card oe_kanban_global_click">
					<field name="name" />
					<field name="completado" widget="progressbar"/>
				</div>
			</t>
		</templates>
		</kanban>
		</field>
		</record>
	<record id="view_planequipamiento_form" model="ir.ui.view">
		<field name="name">Vista formulario de configurador</field>
		<field name="model">conf2</field>
		<field name="arch" type="xml">
		<form>
			<header>
				<button string="A침ade tareas" type="object" name="create_tarea"/>
				<button name="make_curso" string="Establecer en curso" type="object"/>
				<button name="make_revision" string="Establecer en revisi칩n" type="object"/>
				<button name="make_enviado" string="Establecer como enviado" type="object"/>
				<field name="state" widget="statusbar"/>
			</header>
				<sheet>
				<div class="oe_title">
					<div class="o_row">
						<h1 style="display:flex;">
							<field name="name" class="oe_inline" placeholder="Nombre del plan (espa침ol)" required="1" default_focus="1"></field>
							<field name="completado" widget="progressbar"/>
						</h1>
					</div>

				</div>				
				<group string="Datos principales" style="margin-top:-10px">
					<group>
						<field name="fecha_ini"/>
					</group>
					<group>
						<field name="fecha_fin"/>
					</group>
				</group>
				<notebook>
					<page string="Estudios" name="estudios">
					<group>
					<group>
					<field name="estudios"/>
					<field name="estudios_resp"/>
					</group>
					<group>
					<field name="estudios_ini"/>
					<field name="estudios_fin"/>
					</group>
					</group>
					</page>
                                        <page string="Mapa" name="mapa">
                                        <group>
                                        <group>
                                        <field name="mapa"/>
                                        <field name="mapa_resp"/>
                                        </group>
                                        <group>
                                        <field name="mapa_ini"/>
                                        <field name="mapa_fin"/>
                                        </group>
                                        </group>
                                        </page>
					 <page string="Plan funcional" name="plan_funcional">
                                        <group>
                                        <group>
                                        <field name="plan_funcional"/>
                                        <field name="plan_funcional_resp"/>
                                        </group>
                                        <group>
                                        <field name="plan_funcional_ini"/>
                                        <field name="plan_funcional_fin"/>
                                        </group>
                                        </group>
                                        </page>
                                         <page string="Plan espacios" name="plan_espacios">
                                        <group>
                                        <group>
                                        <field name="plan_espacios"/>
                                        <field name="plan_espacios_resp"/>
                                        </group>
                                        <group>
                                        <field name="plan_espacios_ini"/>
                                        <field name="plan_espacios_fin"/>
                                        </group>
                                        </group>
                                        </page>
					 <page string="Plan equipamiento" name="plan_equipamiento">
                                        <group>
                                        <group>
                                        <field name="plan_equipamiento"/>
                                        <field name="plan_equipamiento_resp"/>
                                        </group>
                                        <group>
                                        <field name="plan_equipamiento_ini"/>
                                        <field name="plan_equipamiento_fin"/>
                                        </group>
                                        </group>
                                        </page>
					<page string="Tareas documentales" name="tareas_documentales">
					<group>
					<field name="child_documental_ids"/>
					</group>
					</page>
					<page string="Tareas planificaci칩n" name="tareas_planif">
					<group>
					<field name="child_tareas_ids"/>
					</group>
					</page>
				</notebook>
				</sheet>
		</form>
		</field>
	</record>
	<record id="view_tarea_calendar" model="ir.ui.view">
	<field name="model">conf2</field>
	<field name="arch" type="xml">
	<calendar date_start="fecha_ini" date_stop="fecha_fin">
	<field name="name"/>
	</calendar>
	</field>
	</record>
	<record id="view_conf2_tree" model="ir.ui.view">
		<field name="name">Vista lista de proyectos</field>
		<field name="model">conf2</field>
		<field name="arch" type="xml">
		<tree>
		<field name="name" />
		<field name="state"/>
		<field name="completado" widget="progressbar"/>
		<field name="fecha_ini"/>
		<field name="fecha_fin"/>
		</tree>
		</field>
	</record>
</odoo>
