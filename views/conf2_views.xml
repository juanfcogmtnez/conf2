<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="kanban_planes" model="ir.ui.view">
		<field name="name">planes.kanban</field>
		<field name="model">conf2</field>
		<field name="arch" type="xml">
		<kanban default_group_by="state" group_create="true">
		<field name="state" />
		<field name="name" />
		<templates>
			<t t-name="kanban-box">
				<div class="oe_kanban_card oe_kanban_global_click">
					<field name="name" />
				</div>
			</t>
		</templates>
		</kanban>
		</field>
		</record>
	<record id="view_planequipamiento_form" model="ir.ui.view">
		<field name="name">Vista formulario de configurador</field>
		<field name="model">conf2</field>
		<field name="arch" type="xml">
		<form>
			<header>
				<button string="Añade local" type="object" name="create_tarea"/>
				<field name="state" widget="statusbar"/>
			</header>
				<sheet>
				<widget name="web_ribbon" title="Archivado" bg-color="bg-info" attrs="{'invisible':[('active','=',True)]}"/>
				<div class="oe_title">
					<div class="o_row">
						<h1 style="display:flex;">
							<field name="name" class="oe_inline" placeholder="Nombre del plan (español)" required="1" default_focus="1"></field>
						</h1>
					</div>
				</div>				
				<group string="Datos principales" style="margin-top:-10px">
					<group>
						<field name="name"></field>
						<field name="project_id"></field>
						<field name="padre"></field>
						<field name="completado"></field>
					</group>
					<group>
					<field name="create_date"/>
					<field name="date_deadline"/>						
					<field name="active"></field>
					</group>
					<field name="child_ids"></field>
				</group>
				</sheet>
		</form>
		</field>
	</record>
	<record id="view_tarea_calendar" model="ir.ui.view">
	<field name="model">conf2</field>
	<field name="arch" type="xml">
	<calendar date_start="create_date" date_stop="date_deadline">
	<field name="name"/>
	</calendar>
	</field>
	</record>
	
</odoo>
